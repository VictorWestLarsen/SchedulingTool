        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftEnd)
