@model SchedulingTool.Models.Shift

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftStart" class="control-label"></label>
                <input type="datetime-local" asp-for="ShiftStart" class="form-control" />
                <span asp-validation-for="ShiftStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftEnd" class="control-label"></label>
                <input type="datetime-local" asp-for="ShiftEnd" class="form-control" />
                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId">
                    @foreach (Employee e in ViewBag.Employees)
                    {
                        <option value="@e.Id">@e.Name - Alder: @e.getAge()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Opgaver</label>
                <select class="form-control" name="todoIds" multiple>
                    @foreach (Todo t in ViewBag.Todos)
                    {

                        <option value="@t.Id">@t.Name - Minimums Alder: @t.RequiredAge</option>
                    }
                </select>
                <label class="text-danger">@ViewBag.AgeError</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
